@model IEnumerable<BangBangFuli.API.MVCDotnet2.Models.ProductInformationViewModel>
@{
    ViewData["Title"] = "商品管理";
    Layout = "~/Pages/_Layout.cshtml";
}
<blockquote class="layui-elem-quote">
    <a class="layui-btn layui-btn-normal" href="/Product/Create">添加商品</a>
</blockquote>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>商品信息综合查询</legend>
</fieldset>
<div class="layui-fluid">
    <div class="layui-row" id="content_table">
        <table class="layui-table" lay-filter="test">
            <thead>
                <tr>
                    <th>
                        商品ID(序号)
                    </th>
                    <th>
                        商品编码
                    </th>
                    <th>
                        商品名称
                    </th>
                    <th>
                        是否有库存
                    </th>
                    <th>
                        状态
                    </th>
                    <th>
                        分类
                    </th>
                    <th>
                        批次号
                    </th>
                    <th>
                        批次名称
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var product in Model)
                    {
                        <tr class="laytable-cell-1-picurl">
                            <td>
                                @Html.DisplayFor(modelItem => product.ProductId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.ProductCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.StockStatusName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.ProductStatusName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.ClassTypeName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.BatchId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.BatchName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-primary m-1">编辑</a> |
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary m-1">详情</a> |
                                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-primary m-1">删除</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div id="page"></div>
    </div>
</div>




